

@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<Project>
<html>
<head>
    <title>Portfolio</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="assets/css/main.css" />
    <noscript><link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
</head>
<body class="is-preload">

    <!-- Page Wrapper -->
    <div id="page-wrapper">

        <!-- Header -->
        <header id="header" class="alt">
            <h1><a href="/home/index">Portfolio</a></h1>
         
        </header>

        <!-- Banner -->
        
        <section id="banner">
            <div class="outter">
                <h2>This is my Portfolio</h2>
            </div>
        </section>
      
        <section id="wrapper">
           
            <!-- E para -->
            <section id="one" class="wrapper spotlight style1">
                <div class="inner">
                    <a href="#" class="image"><img src="images/pic01.jpg" alt="" /></a>
                    <div class="content">
                        <h2 class="major">About Me</h2>
                        <p>My name is Flamur, I am 19. Currently, I am studying Computer Science at UBT College. There is one main goal in my life, being a terrific 
                            programmer with all the benefits that come with it. </p>
                      
                    </div>
                </div>
            </section>

            <!-- E dyta -->
            <section id="two" class="wrapper alt spotlight style2">
                <div class="inner">
                    <a href="#" class="image"><img src="images/pic02.jpg" alt="" /></a>
                    <div class="content">
                        <h2 class="major">Before</h2>
                        <p>I come from Klina, a delightful small town. My passion towards the digital world, was discovered while I was working at my dad's ISP
                            Company. During the four years working at that company, I have found great pleasure whilst overcoming any obstacle that came my way.</p>
                        
                    </div>
                </div>
            </section>

            <!-- e treta -->
            <section id="three" class="wrapper spotlight style3">
                <div class="inner">
                    <a href="#" class="image"><img src="images/pic03.jpg" alt="" /></a>
                    <div class="content">
                        <h2 class="major">Experience</h2>
                        <p>Although I dont have any experience in working as a programmer, I have finished two training courses for Java at BaffWorks.
I have also acquired skills in C# and .NET Core. </p>
                       
                    </div>
                </div>
            </section>

            <!-- e katerta -->
            <section id="four" class="wrapper alt style1">
                <div class="inner">
                    <h2 class="major">Projects</h2>
                    <p></p>
                     <section class="features">
                        @if(Model!=null){
                        @foreach (var obj in Model) 
                        {
                        <article>
                            <a href="#" class="image"><img src="@obj.ImgName" alt="" /></a>
                            <h3 class="major"></h3>
                            <p>@obj.Description</p>
                            
                        </article>
                        }}
                    </section>
                    <ul class="actions">
                        
                    </ul>
                </div>
            </section>

        </section>

        <!-- footer -->
        <section id="footer">
            <div class="inner">
                <h2 class="major">Get in touch</h2>
                <p></p>
                <form method="post" asp-controller="Home" asp-action="Index" enctype="multipart/form-data">
                    <div class="fields">
                        <div class="field">
                            <label for="name">Name</label>
                            <input type="text" name="PersonName" id="name" />
                        </div>
                        <div class="field">
                            <label for="email">Email</label>
                            <input type="email" name="Email" id="email" />
                        </div>
                        <div class="field">
                            <label for="message">Message</label>
                            <textarea name="Message" id="message" rows="4"></textarea>
                        </div>
                    </div>
                    <ul class="actions">
                        <li><input type="submit" value="Send" /></li>
                    </ul>
                    <span style="color:green">@ViewBag.Message</span>
                </form>
                <ul class="contact">
								<li id="Address" class="icon solid fa-home"></li>
								<li class="icon solid fa-envelope"><a href="#" id="Email"></a></li>
								<li class="icon brands fa-twitter"><a href="#" id="Twitter">twitter.com/untitled-tld</a></li
							</ul>
       
    
            </div>
        </section>

    </div>
    <script src="/assets/js/muli.js"></script>
    <!-- skriptat -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/jquery.scrollex.min.js"></script>
    <script src="assets/js/browser.min.js"></script>
    <script src="assets/js/breakpoints.min.js"></script>
    <script src="assets/js/util.js"></script>
    <script src="assets/js/main.js"></script>

    

 
</body>
</html>